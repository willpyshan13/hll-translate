<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/public_dp10"
    android:layout_marginRight="@dimen/public_dp10"
    android:orientation="vertical">

    <include
        android:id="@+id/settings_home_toolbar"
        layout="@layout/public_include_title" />

    <TextView
        android:id="@+id/translate_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="美国"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/translate_police"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="美国"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/translate_police_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:text="911"
            android:textSize="20sp" />
    </RelativeLayout>

    <include layout="@layout/public_include_divider_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="美国"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:text="911"
            android:textSize="20sp" />
    </RelativeLayout>

    <include layout="@layout/public_include_divider_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="美国"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:text="911"
            android:textSize="20sp" />
    </RelativeLayout>

    <include layout="@layout/public_include_divider_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/translate_recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>